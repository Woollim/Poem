        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".Activity.NoOutPoemActivity"/>
        <activity android:name=".Activity.MainActivity"/>
        <activity android:name=".Activity.SignUpActivity"/>
        <activity android:name=".Activity.MyPageActivity"/>
        <activity android:name=".Activity.PoemtryIndexActivity"/>
        <activity android:name=".Activity.WritePoemActivity"/>
        <activity android:name=".Activity.PoemActivity"/>
        <activity android:name=".Activity.SelectPoemtryActivity"/>
        <activity android:name=".Activity.BluetoothShareActivity"/>
        <activity android:name=".Activity.SharePoemActivity"/>
        <activity android:name=".Activity.SelectBookCoverActivity"/>
        <activity android:name=".Activity.SelectShareActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"/>

    </application>

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

</manifest>