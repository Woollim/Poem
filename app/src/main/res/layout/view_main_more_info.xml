<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="84dp"
            android:src="@drawable/img_main_books"
            android:layout_height="84dp" />

        <TextView
            android:layout_margin="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마음에 드는 시집이 없으세요?"
            android:textColor="@color/colorMainTitle"
            android:textSize="18dp"/>

        <Button
            android:background="@drawable/main_more_info_button_shape"
            android:layout_width="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginBottom="64dp"
            android:textSize="14dp"
            android:id="@+id/getInfoButton"
            android:layout_height="40dp"
            android:textColor="@color/colorMainWriter"
            android:text="다음 시집 불러오기"/>
    </LinearLayout>

</RelativeLayout>