<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="82dp"
        android:src="@drawable/icon"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:textColor="@color/colorNo5"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:text="@string/appInfoVertical"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/textView"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/idEdit"
            android:gravity="center"
            android:hint="아이디"
            android:inputType="textEmailAddress"
            android:textSize="18dp"
            android:textColorHint="@color/colorNo2"
            android:padding="12dp"
            android:background="@drawable/back_signin_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/pwEdit"
            android:gravity="center"
            android:hint="비밀번호"
            android:textSize="18dp"
            android:textColorHint="@color/colorNo2"
            android:padding="12dp"
            android:background="@drawable/back_signin_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/signInButton"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/colorNo4"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#44EFEFEF"/>
            <Button
                android:id="@+id/signUpButton"
                android:textColor="#FFFFFF"
                android:text="회원가입"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/colorNo4"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>





</RelativeLayout>