<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/regiButton"
            android:text="기기 등록"
            android:background="@drawable/bluetooth_button_shape"
            android:textColor="@color/colorNo4"
            android:textSize="18dp"
            android:layout_margin="8dp"
            android:layout_width="160dp"
            android:layout_height="55dp" />

        <Button
            android:enabled="false"
            android:id="@+id/poemSelectButton"
            android:text="시 선택"
            android:textSize="18dp"
            android:background="@drawable/bluetooth_button_shape"
            android:textColor="@color/colorNo4"
            android:layout_margin="8dp"
            android:layout_width="160dp"
            android:layout_height="55dp" />

        <Button
            android:enabled="false"
            android:id="@+id/deviSelectButton"
            android:text="기기 선택"
            android:textSize="18dp"
            android:background="@drawable/bluetooth_button_shape"
            android:textColor="@color/colorNo4"
            android:layout_margin="8dp"
            android:layout_width="160dp"
            android:layout_height="55dp" />

    </LinearLayout>

    <ImageButton
        android:layout_margin="4dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitCenter"
        android:background="@drawable/shape_button_click"
        android:src="@drawable/btn_back"/>


</RelativeLayout>